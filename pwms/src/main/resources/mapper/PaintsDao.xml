<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pwms.dao.PaintsDao">

    <resultMap type="com.pwms.entity.Paints" id="PaintsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="brand" column="brand" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="unit" column="unit" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PaintsMap">
        select
          id, name, brand, type, unit, price, remark
        from paints
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PaintsMap">
        select
          id, name, brand, type, unit, price, remark
        from paints
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="brand != null and brand != ''">
                and brand = #{brand}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="unit != null and unit != ''">
                and unit = #{unit}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from paints
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="brand != null and brand != ''">
                and brand = #{brand}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="unit != null and unit != ''">
                and unit = #{unit}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into paints(name, brand, type, unit, price, remark)
        values (#{name}, #{brand}, #{type}, #{unit}, #{price}, #{remark})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paints(name, brand, type, unit, price, remark)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.brand}, #{entity.type}, #{entity.unit}, #{entity.price}, #{entity.remark})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paints(name, brand, type, unit, price, remark)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.brand}, #{entity.type}, #{entity.unit}, #{entity.price}, #{entity.remark})
        </foreach>
        on duplicate key update
        name = values(name),
        brand = values(brand),
        type = values(type),
        unit = values(unit),
        price = values(price),
        remark = values(remark)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update paints
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="brand != null and brand != ''">
                brand = #{brand},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="unit != null and unit != ''">
                unit = #{unit},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from paints where id = #{id}
    </delete>

</mapper>

